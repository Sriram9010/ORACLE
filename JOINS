SQL> -- HELP_REQUESTS TABLE
SQL> CREATE TABLE HELP_REQUESTS (
  2      REQUEST_ID NUMBER(10) PRIMARY KEY,
  3      USER_ID NUMBER(10),
  4      ISSUE VARCHAR2(30),
  5      CONSTRAINT fk_user
  6          FOREIGN KEY (USER_ID) REFERENCES MASTER_USERS(ID)
  7  );

Table created.

SQL> SELECT s.seat_number AS SEATNO,
  2         sc.category_name AS CATEGORYNAME
  3  FROM stadium st
  4  JOIN seats s
  5    ON st.stadium_id = s.stadium_id
  6  JOIN seatcategories sc
  7    ON s.category_id = sc.category_id
  8  WHERE st.stadium_name = 'EDEN GARDENS'
  9  ORDER BY s.seat_number DESC;
JOIN seats s
